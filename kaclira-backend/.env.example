# Kaçlıra.com - Price Comparison System Backend Configuration
# Laravel 11 REST API Backend

APP_NAME="Kaçlıra Backend"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=tr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=tr_TR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# MySQL Database Configuration for Kaçlıra.com
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=kaclira_db
DB_USERNAME=root
DB_PASSWORD=

# JWT Authentication Configuration
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT=1000

# API Security Configuration
API_RATE_LIMITING_ENABLED=true
API_RATE_LIMIT_GUEST=100
API_RATE_LIMIT_USER=500
API_RATE_LIMIT_SELLER=1000
API_RATE_LIMIT_WINDOW=60

# API Keys Configuration
API_KEYS_ENABLED=true
API_MAX_KEYS_PER_USER=5

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:3000,https://kaclira.com"

# API Security Features
API_CSRF_ENABLED=true
API_XSS_PROTECTION=true
API_SQL_INJECTION_PROTECTION=true
API_MAX_REQUEST_SIZE=10M
API_MAX_FILE_SIZE=5M

# API Response Configuration
API_STANDARDIZE_RESPONSES=true
API_INCLUDE_META=true
API_INCLUDE_DEBUG=false
API_PRETTY_PRINT=false

# API Caching
API_CACHING_ENABLED=true
API_CACHE_TTL=3600
API_CACHE_DRIVER=redis

# API Logging
API_LOGGING_ENABLED=true
API_LOG_REQUESTS=false
API_LOG_RESPONSES=false
API_LOG_ERRORS=true
API_LOG_SLOW_QUERIES=true
API_SLOW_QUERY_THRESHOLD=1000
API_LOG_CHANNEL=daily

# API Documentation
API_SWAGGER_ENABLED=true
API_SWAGGER_ROUTE=/api/documentation
API_POSTMAN_ENABLED=true

# API Monitoring
API_MONITORING_ENABLED=true
API_ERROR_RATE_THRESHOLD=5
API_RESPONSE_TIME_THRESHOLD=2000

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Push Notification Services Configuration
# Firebase Cloud Messaging (FCM) for Android/iOS
FCM_SERVER_KEY=
FCM_SENDER_ID=

# Apple Push Notification Service (APNS) for iOS
APNS_KEY_PATH=
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=com.kaclira.app
APNS_ENVIRONMENT=sandbox

# Web Push Notifications (VAPID)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@kaclira.com

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
